{
  "name": "vscode-project-templates",
  "displayName": "Template Hub",
  "description": "Create, manage, and use project templates with variable substitution",
  "version": "1.0.4",
  "publisher": "sherinjosephroy",
  "author": "Sherin Joseph Roy <sherin.joseph2217@gmail.com>",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "template",
    "project",
    "scaffold",
    "boilerplate",
    "generator",
    "vscode-extension",
    "project-templates",
    "variable-substitution"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "templateHub.test",
        "title": "Test Template Hub",
        "category": "Template Hub"
      },
      {
        "command": "templateHub.openHub",
        "title": "Open Template Hub",
        "category": "Template Hub"
      },
      {
        "command": "templateHub.createTemplate",
        "title": "Create Template from Current Project",
        "category": "Template Hub"
      },
      {
        "command": "templateHub.useTemplate",
        "title": "Use Template",
        "category": "Template Hub"
      },
      {
        "command": "templateHub.importTemplate",
        "title": "Import Template",
        "category": "Template Hub"
      },
      {
        "command": "templateHub.exportTemplate",
        "title": "Export Template",
        "category": "Template Hub"
      },
      {
        "command": "templateHub.refreshTemplates",
        "title": "Refresh Templates",
        "category": "Template Hub"
      },
      {
        "command": "templateHub.editTemplate",
        "title": "Edit Template",
        "category": "Template Hub"
      },
      {
        "command": "templateHub.deleteTemplate",
        "title": "Delete Template",
        "category": "Template Hub"
      },
      {
        "command": "templateHub.duplicateTemplate",
        "title": "Duplicate Template",
        "category": "Template Hub"
      },
      {
        "command": "templateHub.previewTemplate",
        "title": "Preview Template",
        "category": "Template Hub"
      }
    ],
    "views": {
      "templateHub.sidebar": [
        {
          "id": "templateHub.templateExplorer",
          "name": "Templates",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "templateHub.sidebar",
          "title": "Template Hub",
          "icon": "resources/template-icon.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "templateHub.refreshTemplates",
          "when": "view == templateHub.templateExplorer",
          "group": "navigation"
        },
        {
          "command": "templateHub.createTemplate",
          "when": "view == templateHub.templateExplorer",
          "group": "navigation"
        },
        {
          "command": "templateHub.importTemplate",
          "when": "view == templateHub.templateExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "templateHub.useTemplate",
          "when": "view == templateHub.templateExplorer && viewItem == template",
          "group": "inline"
        },
        {
          "command": "templateHub.previewTemplate",
          "when": "view == templateHub.templateExplorer && viewItem == template",
          "group": "inline"
        },
        {
          "command": "templateHub.editTemplate",
          "when": "view == templateHub.templateExplorer && viewItem == template",
          "group": "inline"
        },
        {
          "command": "templateHub.duplicateTemplate",
          "when": "view == templateHub.templateExplorer && viewItem == template",
          "group": "inline"
        },
        {
          "command": "templateHub.exportTemplate",
          "when": "view == templateHub.templateExplorer && viewItem == template",
          "group": "inline"
        },
        {
          "command": "templateHub.deleteTemplate",
          "when": "view == templateHub.templateExplorer && viewItem == template",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Template Hub",
      "properties": {
        "templateHub.templatesPath": {
          "type": "string",
          "default": "~/.vscode/templates",
          "description": "Path where templates are stored"
        },
        "templateHub.defaultAuthor": {
          "type": "string",
          "default": "",
          "description": "Default author name for new templates"
        },
        "templateHub.defaultEmail": {
          "type": "string",
          "default": "",
          "description": "Default email for new templates"
        },
        "templateHub.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh templates when files change"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.32.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "archiver": "^6.0.1",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sherin-SEF-AI/project-template-manager-VS-Code-Extension.git"
  },
  "bugs": {
    "url": "https://github.com/Sherin-SEF-AI/project-template-manager-VS-Code-Extension/issues"
  },
  "homepage": "https://github.com/Sherin-SEF-AI/project-template-manager-VS-Code-Extension#readme",
  "license": "MIT",
  "icon": "resources/extension-icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  }
}
